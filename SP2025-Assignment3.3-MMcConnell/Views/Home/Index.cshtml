﻿@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movie Universe</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>

    <!-- Navigation Bar with Always Visible Hamburger Menu -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Movie Universe</a> <!-- Creative title -->
            <!-- Hamburger Menu Button (always visible) -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Menu Items (hidden in mobile view) -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Movies")">Movies</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Actors")">Actors</a>
                    </li>
                    <!-- New Link for Create MovieActors -->
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "MovieActors")">Movie + Actor</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>



    <!-- Hero Section -->
    <div class="container text-center mt-5">
        <h1>Welcome to Movie Universe</h1>
        <p class="lead">Explore the amazing world of movies and actors.</p>

        <!-- Modified Buttons to Link to Movies and Actors Pages -->
        <a href="@Url.Action("Index", "Movies")" class="btn btn-primary btn-lg m-2">Browse Movies</a>
        <a href="@Url.Action("Index", "Actors")" class="btn btn-secondary btn-lg m-2">Browse Actors</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>