@model SP2025_Assignment3._3_MMcConnell.Models.Actor

@{
    ViewData["Title"] = "Create";
}

<!-- Link to Bootstrap CSS for styling -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<!-- Navigation Bar with Always Visible Hamburger Menu -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Movie Universe</a> <!-- Creative title -->
        <!-- Hamburger Menu Button (always visible) -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Menu Items (hidden in mobile view) -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Movies")">Movies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Actors")">Actors</a>
                </li>
                <!-- New Link for Create MovieActors -->
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "MovieActors")">Movie + Actor</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<h1 class="text-center">@ViewData["Title"]</h1>
<h4 class="text-center">Create a New Actor</h4>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* <form asp-controller="Actors" asp-action="Create" method="post" enctype="multipart/form-data"> *@
                @* @Html.AntiForgeryToken() *@

                <!-- Validation Summary -->
       

                <!-- Name Field -->
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter actor's name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Gender Field (Dropdown) -->
                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <select asp-for="Gender" class="form-select">
                        <option value="">Select Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <!-- Age Field (Number Input) -->
                <div class="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" type="number" class="form-control" placeholder="Enter actor's age" min="1" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <!-- IMDB Link Field -->
                <div class="form-group">
                    <label asp-for="IMDBLink" class="control-label"></label>
                    <input asp-for="IMDBLink" class="form-control" placeholder="Enter IMDB link" />
                    <span asp-validation-for="IMDBLink" class="text-danger"></span>
                </div>

                <!-- Actor Image Upload -->
                <div class="form-group">
                    <label asp-for="ActorImage" class="control-label">Upload Actor Image</label>
                    <input type="file" id="ActorImage" name="ActorImage" class="form-control" />
                    <span asp-validation-for="ActorImage" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <!-- Back to List Link -->
    <div class="text-center mt-3">
        <a href="@Url.Action("Index", "Actors")">Back to Actors List</a>
    </div>

</div>

@section Scripts {
    <!-- Validation scripts for client-side validation -->
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate.unobtrusive/3.2.8/jquery.validate.unobtrusive.min.js"></script>
}
