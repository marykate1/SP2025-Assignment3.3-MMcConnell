@model SP2025_Assignment3._3_MMcConnell.Models.Actor

@{
    ViewData["Title"] = "Edit Actor";
}

<!-- Link to Bootstrap CSS for styling -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<!-- Navigation Bar with Always Visible Hamburger Menu -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Movie Universe</a> <!-- Creative title -->
        <!-- Hamburger Menu Button (always visible) -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Menu Items (hidden in mobile view) -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Movies")">Movies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Actors")">Actors</a>
                </li>
                <!-- New Link for Create MovieActors -->
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "MovieActors")">Movie + Actor</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<h1 class="text-center mb-4">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit" class="card shadow p-4 rounded-3">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Id" />

            <!-- Actor Name -->
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label fw-bold">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter actor's name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Gender Dropdown -->
            <div class="form-group mb-3">
                <label asp-for="Gender" class="form-label fw-bold">Gender</label>
                <select asp-for="Gender" class="form-control">
                    <option value="Male" selected="@(Model.Gender == "Male")">Male</option>
                    <option value="Female" selected="@(Model.Gender == "Female")">Female</option>
                    <option value="Other" selected="@(Model.Gender == "Other")">Other</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <!-- Age Field -->
            <div class="form-group mb-3">
                <label asp-for="Age" class="form-label fw-bold">Age</label>
                <input asp-for="Age" type="number" class="form-control" min="0" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <!-- IMDB Link -->
            <div class="form-group mb-3">
                <label asp-for="IMDBLink" class="form-label fw-bold">IMDB Link</label>
                <input asp-for="IMDBLink" class="form-control" placeholder="Enter IMDB URL" />
                <span asp-validation-for="IMDBLink" class="text-danger"></span>
            </div>

            <!-- Actor Image URL -->
            <div class="form-group mb-3">
                <label asp-for="ActorImage" class="form-label fw-bold">Actor Image URL</label>
                <input asp-for="ActorImage" class="form-control" placeholder="Enter image URL" />
                <span asp-validation-for="ActorImage" class="text-danger"></span>
            </div>

            <div class="text-center">
                <!-- Save Button -->
                <button type="submit" class="btn btn-success w-100 mb-2">Save Changes</button>
                <!-- Back to List -->
                <a class="btn btn-warning btn-sm" href="@Url.Action("Index", "Actors")">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
