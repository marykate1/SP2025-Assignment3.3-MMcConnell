@model SP2025_Assignment3._3_MMcConnell.Models.Actor

@{
    ViewData["Title"] = "Delete";
}

<!-- Link to Bootstrap CSS for styling -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<!-- Navigation Bar with Always Visible Hamburger Menu -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Movie Universe</a> <!-- Creative title -->
        <!-- Hamburger Menu Button (always visible) -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Menu Items (hidden in mobile view) -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Movies")">Movies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Actors")">Actors</a>
                </li>
                <!-- New Link for Create MovieActors -->
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "MovieActors")">Movie + Actor</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<h1 class="text-center">@ViewData["Title"]</h1>
<h3 class="text-center">Are you sure you want to delete this actor?</h3>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4>Actor Details</h4>
            <dl class="row">
                <!-- Name -->
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <!-- Gender -->
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Gender)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Gender)
                </dd>

                <!-- Age -->
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Age)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Age)
                </dd>

                <!-- IMDB Link -->
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.IMDBLink)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.IMDBLink)
                </dd>

                <!-- Actor Image -->
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.ActorImage)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.ActorImage)
                </dd>
            </dl>

            <div class="text-center">
                <!-- Delete Form -->
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger mb-3" />
                </form>
                <!-- Back Link -->
                <a href="@Url.Action("Index", "Actors")" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Validation scripts for client-side validation -->
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate.unobtrusive/3.2.8/jquery.validate.unobtrusive.min.js"></script>
}
