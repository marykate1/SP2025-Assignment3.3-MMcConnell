@model SP2025_Assignment3._3_MMcConnell.Models.MovieActorsDetails

@{
    ViewData["Title"] = "Details";
}

<!-- Bootstrap CSS for styling -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-5">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-info text-white text-center">
            <h2>MovieActor Details</h2>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">
                    Actor Name
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ActorName)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    Movie Title
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MovieTitle)
                </dd>
            </dl>
        </div>

        <div class="card-footer text-center">
            <a class="btn btn-outline-secondary" href="@Url.Action("Index", "MovieActors")">Back to List</a>
        </div>
    </div>
</div>
