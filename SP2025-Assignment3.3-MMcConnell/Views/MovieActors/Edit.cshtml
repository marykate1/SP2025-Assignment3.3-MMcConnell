@model SP2025_Assignment3._3_MMcConnell.Models.MovieActor


@{
    ViewData["Title"] = "Edit MovieActor";
}


<!-- Bootstrap CSS for styling -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />


<!-- Navigation Bar with Always Visible Hamburger Menu -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Movie Universe</a> <!-- Creative title -->
        <!-- Hamburger Menu Button (always visible) -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Menu Items (hidden in mobile view) -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Movies")">Movies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Actors")">Actors</a>
                </li>
                <!-- New Link for Create MovieActors -->
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "MovieActors")">Movie + Actor</a>
                </li>
            </ul>
        </div>
    </div>
</nav>


<h1 class="text-center mb-4">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit" method="post" enctype="multipart/form-data" class="card shadow p-4 rounded-3">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Id" />

            <!-- ActorID Input -->
            <div class="form-group mb-3">
                <label asp-for="ActorID" class="form-label fw-bold">Actor ID</label>
                <input asp-for="ActorID" class="form-control" value="@Model.ActorID" />
                <span asp-validation-for="ActorID" class="text-danger"></span>
            </div>

            <!-- MovieID Input -->
            <div class="form-group mb-3">
                <label asp-for="MovieID" class="form-label fw-bold">Movie ID</label>
                <input asp-for="MovieID" class="form-control" value="@Model.MovieID" />
                <span asp-validation-for="MovieID" class="text-danger"></span>
            </div>

            <!-- Save Button -->
            <div class="text-center">
                <button type="submit" class="btn btn-success w-100 mb-2">Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary w-100" href="@Url.Action("Index", "Movies")>Back to List</a>
            </div>
        </form>
       
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
