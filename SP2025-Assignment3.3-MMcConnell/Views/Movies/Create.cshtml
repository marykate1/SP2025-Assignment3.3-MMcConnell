@model SP2025_Assignment3._3_MMcConnell.Models.Movie

@{
    ViewData["Title"] = "Create";
}

<!-- Link to Bootstrap CSS for styling -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<h1 class="text-center">@ViewData["Title"]</h1>

<h4 class="text-center">Create a New Movie</h4>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" enctype="multipart/form-data">
                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Title Field -->
                <div class="form-group mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" placeholder="Enter movie title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Genre Field -->
                <div class="form-group mb-3">
                    <label asp-for="Genre" class="form-label"></label>
                    <input asp-for="Genre" class="form-control" placeholder="Enter movie genre" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>

                <!-- Year Field -->
                <div class="form-group mb-3">
                    <label asp-for="Year" class="form-label"></label>
                    <input asp-for="Year" class="form-control" placeholder="Enter release year" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <!-- IMDB Link Field -->
                <div class="form-group mb-3">
                    <label asp-for="IMDBlink" class="form-label"></label>
                    <input asp-for="IMDBlink" class="form-control" placeholder="Enter IMDB link" />
                    <span asp-validation-for="IMDBlink" class="text-danger"></span>
                </div>

                <!-- Movie Image Upload -->
                <div class="form-group mb-3">
                    <label asp-for="MovieImage" class="form-label">Upload Movie Image</label>
                    <input type="file" name="MovieImage" class="form-control" />
                    <span asp-validation-for="MovieImage" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <!-- Back to List Link -->
    <div class="text-center mt-3">
        <a href="@Url.Action("Index", "Movies")">Back to Movies List</a>
    </div>
    <script>
        window.onload = function () {
            let errorMessages = "";
        @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            @:errorMessages += "@modelError.ErrorMessage\n";
        }
            if (errorMessages !== "") {
                alert(errorMessages);
            }
        };
    </script>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
